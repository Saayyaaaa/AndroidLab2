<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SectionActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:fontFamily="@font/amarante"
        />
    <Button
        android:id="@+id/animal_btn"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:backgroundTint="@color/green"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:text="@string/txt_animal"/>

    <Button
        android:id="@+id/celebrity_btn"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:text="@string/txt_celebrity"/>

    <Button
        android:id="@+id/cat_btn"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:backgroundTint="@color/pink"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:text="@string/txt_cat"/>

</LinearLayout>