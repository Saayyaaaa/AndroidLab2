<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="12"
        android:orientation="vertical">

        <TextView
            android:id="@+id/animal_kingdom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="kingdom"/>

        <TextView
            android:id="@+id/animal_phylum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="phylum"/>

        <TextView
            android:id="@+id/animal_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="order"/>
        <TextView
            android:id="@+id/animal_family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="family"/>

        <TextView
            android:id="@+id/animal_genus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="genus"/>

        <TextView
            android:id="@+id/animal_scientificName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="scientificName"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/remove_animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:layout_gravity="center"
        app:srcCompat="@drawable/baseline_delete_24"
        />


</LinearLayout>